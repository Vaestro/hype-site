form#checkout-form.form(role='form', action='/charge', method='post', data-parsley-validate='')
  fieldset
    .form__group
      input#email.form__input(type='text', name='email', placeholder="Your email", required="", data-parsley-type="email")
    .form-group
      input#email.form__input(type='text', name='phoneNumber', placeholder="Your phone number", required="", data-parsley-type="digits", data-parsley-length="[10,11]")
    .form-group
      input#name.form__input(type='text', name='name', placeholder="Card Holder's Name", required="")
    .form-group
      input#card-number.form__input(type='text', name='card-number', placeholder='Debit/Credit Card Number', required="")
    .form-group
      .col-sm-3
        label.control-label(for='expiry-month') Expiration Date
      .col-sm-9 
        .row
          .col-xs-3
            select#expiry-month.form-control.col-sm-2(name='expiry-month')
              option Month
              option(value='01') Jan (01)
              option(value='02') Feb (02)
              option(value='03') Mar (03)
              option(value='04') Apr (04)
              option(value='05') May (05)
              option(value='06') June (06)
              option(value='07') July (07)
              option(value='08') Aug (08)
              option(value='09') Sep (09)
              option(value='10') Oct (10)
              option(value='11') Nov (11)
              option(value='12') Dec (12)
          .col-xs-3
            select#expiry-year.form-control(name='expiry-year')
              option(value='16') 2016
              option(value='17') 2017
              option(value='18') 2018
              option(value='19') 2019
              option(value='20') 2020
              option(value='21') 2021
              option(value='22') 2022
              option(value='23') 2023
    .form-group
      input#cvv.form__input(type='text', name='cvv', placeholder='Security Code', required="")
    input.form-group(type='hidden', name='price', value="#{admissionOption.get('price')}")
    input.form-group(type='hidden', name='admissionOptionID', value="#{admissionOption.id}")
    input.form-group(type='hidden', name='eventID', value="#{event.id}")

    button#submit-btn.btn.btn-primary.btn-lg(type='submit') Pay Now
