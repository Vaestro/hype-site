extends layout

block links
  link(rel='stylesheet', href='/stylesheets/home.css')
  link(rel='stylesheet', href='/stylesheets/slick.css')

block content
  #banner-wrapper
    #first-banner
      .container
        h1.banner-title HYPE
        h2.banner-subtitle NIGHTLIFE
        hr.banner-hr
        h3.banner-message The app that gets you in the best party tonight
        .banner-button
          a.beta-access-button(href='/betarequest') Tell me more
        
  #explanation-section
    .container
      #explanation-wrapper
        .section-title
          h3 Not just another night out
        .row-centered
          .col-lg-6.col-centered
            p No more waiting in line. arguing with the bouncer. spending more than you should on drinks. and standing in the corner with strangers you barely like.
            
  #events-section
    .container
      .row
        .col-lg-6.col-md-6.col-sm-6
          .message
            h3 Discover the best way to go out in your city
            p Pick from any of the most exclusive events in the city.
        .col-lg-6.col-md-6.col-sm-6
          img.img-responsive(src= '/images/eventdiscovery.png')  
      
